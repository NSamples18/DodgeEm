<Page
    x:Class="DodgeEm.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:Name="canvas" Background="Black" Width="{StaticResource CanvasWidth}"
            Height="{StaticResource CanvasHeight}">
        <TextBlock x:Name="win" Width="200" Height="40" Canvas.Left="158" Canvas.Top="178" Text="You Win!"
                   FontSize="20" Foreground="Gold" Visibility="Collapsed"
                   HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.ZIndex="99" />
        <TextBlock x:Name="lose" Width="84" Height="40" Canvas.Left="158" Canvas.Top="178" Canvas.ZIndex="100" Text="You Lose!"
                   FontSize="20" Foreground="Red" Visibility="Collapsed"
                   HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Canvas>
</Page>